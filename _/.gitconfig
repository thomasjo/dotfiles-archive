[user]
	name = Thomas Johansen
	email = thomasjo@gmail.com

[core]
	autocrlf = input

[push]
	default = current

[pull]
	rebase = false

[advice]
	statusHints = false

[help]
	autocorrect = 1

[color]
	ui = always

[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = "red bold 52"
	newNormal = green bold
	newHighlight = "green bold 22"

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[hub]
	protocol = https

[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
