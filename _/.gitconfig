[user]
	name = Thomas Johansen
	email = thomasjo@gmail.com
[push]
	default = simple
[core]
	autocrlf = input
	pager = less -r
[color]
	ui = true
[advice]
	statusHints = false
[credential]
	helper = osxkeychain
[diff]
	tool = bcomp
[difftool]
	prompt = false
[difftool "bcomp"]
	trustExitCode = true
	cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE"
[merge]
	tool = bcomp
[mergetool]
	prompt = false
[mergetool "bcomp"]
	trustExitCode = true
	cmd = "/usr/local/bin/bcomp" "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
[hub]
	protocol = https
